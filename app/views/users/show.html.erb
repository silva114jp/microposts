<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>
<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <tbody>
      <tr>
        <th>Name:</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>Email:</th>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <th>Country:</th>
        <td><%= @user.country %></td>
      </tr>
    </tbody>
  </table>
</div>
<%= link_to "Edit profile" , edit_user_path(@user) %>